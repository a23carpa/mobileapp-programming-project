<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#020202"
    android:paddingBottom="20dp">


    <ImageView
        android:id="@+id/recyclerImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:mipmap/sym_def_app_icon"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/recyclerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#F3F3F3"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/recyclerImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recyclerLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#F3F3F3"
        app:layout_constraintLeft_toRightOf="@id/recyclerImage"
        app:layout_constraintTop_toBottomOf="@id/recyclerName" />

    <TextView
        android:id="@+id/recyclerSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#F3F3F3"
        app:layout_constraintLeft_toRightOf="@id/recyclerImage"
        app:layout_constraintTop_toBottomOf="@id/recyclerLocation" />

    <TextView
        android:id="@+id/recyclerMoons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#F3F3F3"
        app:layout_constraintLeft_toRightOf="@id/recyclerImage"
        app:layout_constraintTop_toBottomOf="@id/recyclerSize" />

    <TextView
        android:id="@+id/recyclerCatagory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#F3F3F3"
        app:layout_constraintLeft_toRightOf="@id/recyclerImage"
        app:layout_constraintTop_toBottomOf="@+id/recyclerMoons" />

</androidx.constraintlayout.widget.ConstraintLayout>